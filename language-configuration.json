{
  "comments": {

    "lineComment": {
      "comment": "todo=",
      "noIndent": true
    }
  },
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
	"folding": {
		"markers": {
			"start": "^(region=\"|region=\\\\\")(?!end)",
			// "start": "^(region=|REGION=|region =|REGION =)(?! *\\*\"(?:end|END)\\*\")",
			"end": "^(region=)(\"end\"|\\\\\"end\\\\\")"
		}
	},

  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ]
}