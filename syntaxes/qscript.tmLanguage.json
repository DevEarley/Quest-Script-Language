{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Quest Script",
	"scopeName": "source.qscript",	
	"patterns": [	
			{				
				"name": "support.property-value.qscript",
				"match": "(?:.*_[0-9]*_)(.*)(?:=)(?:.*)$",
				"captures": {
					"1":{
						"name":"entity.name.class"
					}
				}
			},	
				{				
				"name": "support.property-value.qscript",
				"match": "(?:.*_[0-9]*_)(.*)(?:=)$",
				"captures": {
					"1":{
						"name":"entity.name.class"
					}
				}
			},	
			{				
				"name": "entity.name.function.qscript",
				"match":"^(?:\\[)(.*)(?:\\])" 			
			},
			{				
				"name": "comment.qscript",
				"match":"^(//.*)" 			
			},
			{				
				"name": "comment.qscript",
				"match":"^(#region.*)" 			
			},
			{				
				"name": "comment.qscript",
				"match":"^(#endregion.*)" 			
			},
			{				
				"name": "comment.qscript",
				"match":"^(#REGION.*)" 			
			},
			{				
				"name": "comment.qscript",
				"match":"^(#ENDREGION.*)" 			
			},
			{				
				"name": "entity.go.qscript",
				"match":"^(go)(?:\\[)(.*)(?:\\])" 		,
				"captures": {
					"1":{
						"name":"keyword.control.qscript"
					},
					"2":{
						"name":"entity.name.function.qscript"
					}
				}		
			},
			{				
				"name": "entity.do.qscript",
				"match":"^(do)(?:\\[)(.*)(?:\\])" 		,
				"captures": {
					"1":{
						"name":"keyword.control.qscript"
					},
					"2":{
						"name":"entity.name.method.qscript"
					}
				}		
			},
			{				
				"name": "entity.say.qscript",
				"match":"^(say)(?:\\[)(.*)(?:\\])",
				"captures": {
					"1":{
						"name":"keyword.control.qscript"
					},
					"2":{
						"name":"string.qscript"
					}
				}	
			},
			{				
				"name": "entity.name.method.qscript",
				"match":"^(?:choice\\[)(.*)(?:\\])" 			
			},
			{				
				"name": "entity.name.method.qscript",
				"match":"^(?:choices\\[)(.*)(?:\\])" 			
			},
			{				
				"name": "entity.name.method.qscript",
				"match":"^(?:action\\[)(.*)(?:\\])" 			
			},
			{				
				"name": "entity.name.method.qscript",
				"match":"^(?:actions\\[)(.*)(?:\\])" 			
			},
			{				
				"name": "entity.if.qscript",
				"match": "^(if)(?:\\[)(.*)(?:\\])(.*)",
				"captures": {
					"1":{
						"name":"keyword.control.qscript"
					},
					"2":{
						"name":"entity.name.method.qscript"
					},
					"3":{
						"name":"entity.name.function.qscript"
					}
			}
			}
			
		]
}